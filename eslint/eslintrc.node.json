{
	"parser": "babel-eslint",
	"ecmaFeatures": {
		"generators": true
	},
	"env": {
		"node": true
	},
	"rules": {
		// possible errors
		"no-constant-condition": 1,
		"no-empty-character-class": 1,
		"no-empty": 1,
		"no-ex-assign": 1,
		"no-extra-boolean-cast": 1,
		"no-extra-parens": [2, "functions"],
		"no-extra-semi": 2,
		"no-func-assign": 2,
		"no-inner-declarations": [2, "both"],
		"no-invalid-regexp": 2,
		"no-irregular-whitespace": 2,
		"no-negated-in-lhs": 2,
		"no-obj-calls": 1,
		"no-regex-spaces": 2,
		"no-sparse-arrays": 1,
		"no-unexpected-multiline": 1,
		"no-unreachable": 1,
		"use-isnan": 2,
		"valid-jsdoc": 1,
		"valid-typeof": 2,
		// best practices
		"consistent-return": 1,
		"curly": [2, "multi-line", "consistent"],
		"default-case": 2,
		"dot-location": [2, "property"],
		"dot-notation": [1, {"allowKeywords": false}],
		"no-case-declarations": 1,
		"no-empty-pattern": 1,
		"no-eq-null": 2,
		"no-extra-bind": 1,
		"no-implied-eval": 2,
		"no-iterator": 2,
		"no-labels": 2,
		"no-lone-blocks": 1,
		"no-loop-func": 2,
		"no-multi-spaces": 2,
		"no-multi-str": 1,
		"no-new-func": 1,
		"no-new-wrappers": 2,
		"no-proto": 2,
		"no-redeclare": [2, {"builtinGlobals": true}],
		"no-return-assign": [2, "always"],
		"no-self-compare": 2,
		"no-sequences": 1,
		"no-unused-expressions": [1, {"allowShortCircuit": true, "allowTernary": true}],
		"no-useless-concat": 1,
		"no-void": 2,
		"no-with": 2,
		"wrap-iife": [2, "inside"],
		// strict mode
		"strict": [2, "global"],
		// variables
		"no-catch-shadow": 2,
		"no-delete-var": 2,
		"no-shadow-restricted-names": 2,
		"no-shadow": 2,
		"no-undef-init": 2,
		"no-undef": 2,
		"no-undefined": 2,
		"no-unused-vars": 1,
		"no-use-before-define": 2,
		"no-use-before-define": [1, "nofunc"],
		// node.js and commonjs
		"global-require": 1,
		// stylistic issues
		"array-bracket-spacing": [2, "never"],
		"block-spacing": [2, "always"],
		"brace-style": [2, "1tbs"],
		"camelcase": 2,
		"comma-spacing": 2,
		"comma-style": 2,
		"computed-property-spacing": 2,
		"consistent-this": [2, "self"],
		"eol-last": 2,
		"func-style": [2, "declaration", { "allowArrowFunctions": true }],
		"indent": [2, 4, {"SwitchCase": 0, "VariableDeclarator": 2}],
		"key-spacing": 2,
		"linebreak-style": 2,
		"max-len": [1, 110, 4],
		"no-multiple-empty-lines": [1, {"max": 1}],
		"no-spaced-func": 2,
		"no-trailing-spaces": 2,
		"no-underscore-dangle": 2,
		"no-unneeded-ternary": [2, {"defaultAssignment": false}],
		"object-curly-spacing": 2,
		"operator-linebreak": [2, "before"],
		"padded-blocks": [2, "never"],
		"quote-props": [2, "as-needed"],
		"quotes": [2, "single", "avoid-escape"],
		"semi-spacing": 2,
		"semi": 2,
		"space-after-keywords": 2,
		"space-before-function-paren": [2, "never"],
		"space-before-keywords": 2,
		"space-in-parens": 2,
		"space-infix-ops": 2,
		"space-return-throw-case": 2,
		"space-unary-ops": 2,
		"spaced-comment": [2, "always"],
		// es6
		"spaced-comment": 2,
		"arrow-parens": 2,
		"arrow-spacing": 2,
		"generator-star-spacing": [2, "before"],
		"no-arrow-condition": 2,
		"no-class-assign": 2,
		"no-const-assign": 2,
		"no-dupe-class-members": 2,
		"no-var": 2,
		"object-shorthand": 1,
		"prefer-arrow-callback": 1,
		"prefer-template": 1,
		"require-yield": 2
	}
}